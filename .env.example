# PortGuard Dashboard - Environment Variables
# Copy this file to .env.local and fill in your API keys

# =============================================================================
# App Configuration
# =============================================================================

# Base URL for the application (used for sitemap, robots.txt, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Blockchain & Web3 APIs
# =============================================================================

# Alchemy API Keys (for blockchain data)
# Get your API key from: https://dashboard.alchemy.com/
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_API_KEY_ETHEREUM=your_ethereum_alchemy_key_here
NEXT_PUBLIC_ALCHEMY_API_KEY_ETHEREUM=your_ethereum_alchemy_key_here
ALCHEMY_API_KEY_POLYGON=your_polygon_alchemy_key_here
NEXT_PUBLIC_ALCHEMY_API_KEY_POLYGON=your_polygon_alchemy_key_here

# WalletConnect Project ID (for wallet connections)
# Get your project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# CoinGecko API Key (for price data)
# Get your API key from: https://www.coingecko.com/en/api/pricing
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# Analytics & Tracking
# =============================================================================

# Google Analytics ID (optional)
# Get your GA4 measurement ID from: https://analytics.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# Alerts & Notifications
# =============================================================================

# Resend API Key (for email notifications)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email address to send alerts from
RESEND_FROM_EMAIL=alerts@yourdomain.com

# Email address to receive admin notifications
ALERT_NOTIFICATION_EMAIL=admin@yourdomain.com

# Alert cooldown period in minutes (default: 10)
# Prevents spam by limiting how often the same alert can trigger
ALERT_COOLDOWN_MINUTES=10

# Cron API Key (for scheduled alert processing)
# Generate a secure random string for production
ALERTS_CRON_API_KEY=your_secure_cron_api_key_here

# =============================================================================
# Authentication (NextAuth.js)
# =============================================================================

# NextAuth Secret (generate a secure random string)
# You can generate one with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL (should match your app URL)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Database & Cache (Optional - for premium features)
# =============================================================================

# PostgreSQL Database URL (for storing alerts, notifications, etc.)
# Example: postgresql://username:password@localhost:5432/portguard
DATABASE_URL=postgresql://username:password@localhost:5432/portguard

# Upstash Redis (for caching and rate limiting)
# Get your credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# =============================================================================
# Development & Testing
# =============================================================================

# Set to 'development' for local development
NODE_ENV=development

# =============================================================================
# Security Notes
# =============================================================================

# 1. Never commit .env.local to version control
# 2. Use different API keys for development and production
# 3. Generate strong, unique passwords for database connections
# 4. Rotate API keys regularly
# 5. Use environment-specific configurations for different deployments