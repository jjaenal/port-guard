// Prisma schema for PortGuard snapshots
// Dev uses SQLite; production may override via prisma.config.ts

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Chain {
  ethereum
  polygon
}

enum AlertType {
  price
  portfolio
  liquidation
}

enum AlertOperator {
  above
  below
  percent_increase
  percent_decrease
}

model PortfolioSnapshot {
  id           String   @id @default(cuid())
  address      String
  totalValue   Float
  ethBalance   Float
  maticBalance Float
  tokenCount   Int
  createdAt    DateTime @default(now())

  tokens       TokenSnapshot[]

  @@index([address, createdAt])
  @@map("portfolio_snapshots")
}

model TokenSnapshot {
  id         String   @id @default(cuid())
  snapshotId String
  chain      Chain
  address    String
  symbol     String
  name       String
  balance    String   // Store as string to preserve precision
  decimals   Int
  price      Float
  value      Float
  change24h  Float?

  snapshot   PortfolioSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@index([snapshotId])
  @@map("token_snapshots")
}

model Alert {
  id            String        @id @default(cuid())
  address       String        // Wallet address this alert belongs to
  type          AlertType
  tokenAddress  String?       // Optional for price alerts
  tokenSymbol   String?       // For UI display
  chain         Chain?        // Optional chain filter
  operator      AlertOperator
  value         Float         // Target value to compare against
  enabled       Boolean       @default(true)
  createdAt     DateTime      @default(now())
  lastTriggered DateTime?     // When alert was last triggered
  
  notifications Notification[]
  
  @@index([address, type])
  @@map("alerts")
}

model Notification {
  id          String   @id @default(cuid())
  alertId     String   // Reference to the alert that triggered this notification
  address     String   // Wallet address for quick filtering
  title       String   // Notification title (e.g., "ETH Price Alert")
  message     String   // Notification message body
  type        AlertType // Same as alert type for filtering
  isRead      Boolean  @default(false)
  triggeredAt DateTime @default(now())
  readAt      DateTime? // When user marked as read
  
  alert       Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
  
  @@index([address, isRead, triggeredAt])
  @@index([alertId])
  @@map("notifications")
}
